{
  "name": "omdb-challenge",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.11.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cypress": "^3.8.1",
    "typescript": "^3.2.4",
    "broccoli-asset-rev": "^2.0.2",
    "broccoli-merge-trees": "^0.2.1",
    "broccoli-svg-sprite": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AshlingH/OMDB-Challenge.git"
  },
  "author": "Aisling",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AshlingH/OMDB-Challenge/issues"
  },
  "homepage": "https://github.com/AshlingH/OMDB-Challenge#readme"
}
